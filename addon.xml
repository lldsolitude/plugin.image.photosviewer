<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.image.photosviewer" name="Photos Viewer" version="1.1.1" provider-name="lldsolitude">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
	  <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
	  <platform>all</platform>
	  <summary lang="en_GB">Photos Viewer</summary>
	  <description lang="en_GB">Browse pictures and videos of macOS Photos App</description>
    <disclaimer lang="en_GB">Works on macOS 10.15 and later</disclaimer>
    <license>GPL-2.0</license>
    <source>https://github.com/lldsolitude/plugin.image.photosviewer</source>
    <news>v1.1.1 (2020-04-23)
    - Add option for displaying edited versions of photos/videos
    - Add Chinese translation
    - Add Slideshows browsing
    - Updated Kodi APIs. Now only compatible with Kodi v13+
    </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
    </assets>
  </extension>
</addon>
